#!/bin/bash

# Quality of life deps
sudo apt install wget man ffmpeg unzip -y

# Necessary deps
sudo apt install ssh -y

# Necessary variables
HOME_FOLDER=~/.dotfiles
MODULES_FOLDER=$HOME_FOLDER/modules

# Applies git hub configs
ln -s $HOME_FOLDER/.gitconfig ~/.gitconfig

# Install all deps
MODULES=$(ls -f $MODULES_FOLDER -I . -I ..)
for FILE in $MODULES; do
  . $MODULES_FOLDER/$FILE
done

